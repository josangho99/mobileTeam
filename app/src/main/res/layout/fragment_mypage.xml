<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />
    <Button
        android:id="@+id/mypage_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text = "로그인 하기"
        android:textStyle="bold"
        android:textSize="15dp"
        android:background="@drawable/rounded"
        ></Button>
    <Button
        android:id="@+id/mypage_report"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="120dp"
        android:text = "시설제보"
        android:background="@drawable/rounded_radius_30"
        ></Button>
    <Button
        android:id="@+id/mypage_notice"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="120dp"
        android:text = "공지"
        android:background="@drawable/rounded_radius_30"
        ></Button>
    <Button
        android:id="@+id/mypage_QNA"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="120dp"
        android:text = "문의"
        android:background="@drawable/rounded_radius_30"
        ></Button>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/flag"
        app:tint="@android:color/holo_green_light" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/memo_color"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/chat_bubbles_question"
        />
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/rounded"
    android:backgroundTint="@color/white"
    android:id="@+id/center_item">

    <ImageView
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:id = "@+id/center_image"
        app:background="@drawable/rounded_radius_30"
        android:scaleType="centerCrop"
        >
    </ImageView>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginLeft="8sp"
        android:layout_marginBottom="8sp"
        android:orientation="vertical"
        tools:ignore="ExtraText">
    <TextView
        android:id="@+id/center_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp"
        android:layout_marginLeft="8sp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="센터이름 " />
            android:layout_width="150dp"
            android:layout_height="20sp"
            android:layout_marginBottom="5sp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/center_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8sp"
            tools:text="위치" ></TextView>

        <RatingBar
            android:id="@+id/center_rating"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:numStars="5"
            android:isIndicator="true"
            android:progressTint="#F2C202"
            android:stepSize="0.5"
            android:rating="0"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/center_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30sp"
            android:gravity="bottom"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="카테고리" />

    </LinearLayout>

</LinearLayout>